@model RegisterVM
@{
    ViewData["Title"] = "Register";
}
<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>sign up</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Register start -->
<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>sign up</h2>
                            <span>Please register using account detail bellow.</span>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>
                        <div class="login-form">
                            <form  method="post" asp-action="Register">
                                <input asp-for="Name"  placeholder="Name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                                <input asp-for="UserName"  placeholder="Username">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                                <input asp-for="Email"  placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <input asp-for="Password"  placeholder="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <input asp-for="ConfirmPassword"  placeholder="Confirm password">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <input type="checkbox" id="remember">
                                        <label for="remember">Remember me</label>
                                    </div>
                                    <button type="submit" class="default-btn">sign up</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register end -->
@section Scripts{
    <partial name="_ValidationPartial" />
}