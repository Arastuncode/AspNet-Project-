@{
    ViewData["Title"] = "Event";
}
<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>event</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Event Start -->
<div class="event-area three text-center pt-150 pb-150">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {

                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-event mb-60">
                        <div class="event-img">
                            <a asp-controller="Event" asp-action="Detail" asp-route-Id="@item.Id">
                                <img src="~/img/event/@item.Image" alt="event">
                                <div class="course-hover">
                                    <i class="fa fa-link"></i>
                                </div>
                            </a>
                            <div class="event-date" style="width:100px; height:50px;">
                                <p style="color:white;">@item.Date.ToString("MM/dd/yyyy")</p>
                            </div>
                        </div>
                        <div class="event-content text-left">
                            <h4><a href="event-details.html">ADVANCE PHP WORKSHOP</a></h4>

                            <div class="event-content-right">
                                <a class="default-btn" asp-controller="Event" asp-action="Detail" asp-route-Id="@item.Id">join now</a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
</div>
<!-- Event End -->

